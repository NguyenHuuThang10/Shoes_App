<div class="container" style="margin-top:75px">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-white">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Thành viên</li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-md-3">
            <div class="media border p-3">
                <img src="/img/img_avatar3.png" alt="John Doe" class="mr-3 mt-3 rounded-circle" style="width:60px;">
                <div class="media-body">
                    <h4>{{user.name}}</h4>
                    <p style="color: #666666;">Chỉnh sửa thông tin</p>
                </div>
            </div>
            <ul class="list-group list-group-flush list-profile">
                <li class="list-group-item"><a class="text-body" href="/profile"><i
                            class="fa-regular fa-circle-user fa"></i>Tài khoản của tôi</a></li>
                <li class="list-group-item"><a class="text-body" href="/password"><i class="fa-solid fa-key fa"></i>Đổi
                        mật khẩu</a></li>
                <li class="list-group-item"><a class="text-body" href="/shoes/my-order"><i
                            class="fa-regular fa-rectangle-list fa"></i>Đơn mua</a>
                </li>
                <li class="list-group-item"><a class="text-body" href="/log-out"><i
                            class="fa-solid fa-right-from-bracket fa"></i>Đăng xuất</a></li>
            </ul>
        </div>

        <div class="col-md-9 p-3 mb-5 bg-white rounded box-profile" style="border: solid #e6e6e6 1px;">
            <h2>Đổi mật khẩu</h2>
            {{#if msgErr}}
            <div class="alert alert-danger" role="alert">
                {{msgErr}}
            </div>
            {{/if}}
            {{#if msg}}
            <div class="alert alert-success" role="alert">
                {{msg}}
            </div>
            {{/if}}
            <p style="color: #666666;">Để bảo mật tài khoản, vui lòng
                không chia sẻ mật khẩu cho người khác</p>
            <hr>
            <form id="compareForm" method="post" action="?_method=PUT">
                <div class="form-group row">
                    <label for="pwd_ht" class="col-sm-3 col-form-label">Mật khẩu hiện
                        tại</label>
                    <div class="col-sm-5">
                        <input type="password" class="form-control" id="pwd_ht" name="passOld">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="pwd_new" class="col-sm-3 col-form-label">Mật
                        khẩu mới</label>
                    <div class="col-sm-5">
                        <input type="password" class="form-control" id="password1" name="passNew">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="confirmation_pwd" class="col-sm-3 col-form-label">Nhập lại mật
                        khẩu mới</label>
                    <div class="col-sm-5">
                        <input type="password" class="form-control" id="password2" name="confirm_password">
                    </div>
                </div>

                <div class="form-group row" style="margin-left: 212px; margin-bottom: 50px;">
                    <button class="btn btn-accept" type="submit">Xác nhận</button>
                </div>
            </form>

        </div>
    </div>
</div>