<div class="container" style="margin-top:75px">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-white">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Đơn hàng</li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-md-3">
            <div class="media border p-3">
                <img src="/img/img_avatar3.png" alt="John Doe" class="mr-3 mt-3 rounded-circle" style="width:60px;">
                <div class="media-body">
                    <h4>{{user.name}}</h4>
                    <p>Chỉnh sửa thông tin</p>
                </div>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><a class="text-dark" href="/profile">Tài khoản của tôi</a></li>
                <li class="list-group-item"><a class="text-dark" href="/password">Đổi mật khẩu</a></li>
                <li class="list-group-item"><a class="text-dark" href="/shoes/my-order">Đơn mua</a>
                    <span class="badge badge-primary badge-pill">5</span>
                </li>
                <li class="list-group-item"><a class="text-dark" href="#">Đăng xuất</a></li>
            </ul>
        </div>

        <div class="col-md-9 shadow p-3 mb-5 bg-white rounded" style="border: solid #e6e6e6 1px;">
            <h2>Chi tiết đơn hàng</h2>
            <hr>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Thông tin người nhận</h5>
                    <p class="card-text">Tên người nhận: {{order.user.name}}</p>
                    <p class="card-text">Số điện thoại: {{order.user.phone}}</p>
                    <p class="card-text">Địa chỉ nhận hàng: {{order.shippingAddress.address}}, {{order.shippingAddress.city}}</p>
                </div>
            </div>

            <div class="card mt-2">
                <div class="card-body">
                    <h5 class="card-title">Thông tin đơn hàng</h5>
                    <div class="row ml-1 float-left">
                        <div class="col-12">
                            <p class="text-info">Mã đơn hàng: {{order._id}}</p>
                            {{#each order.orderItems}}
                            <div class="row">
                                <div class="col-2 mt-3">
                                    <img class="img-circle " src="/uploads/{{this.image}}" alt="" width="100%">
                                </div>
                                <div class="col-6 mt-3">
                                    <b>{{this.name}}</b>
                                    <br><small>Phân loại hàng - size: {{this.size}} </small>
                                </div>
                                <div class="col-2 mt-3">
                                    <i>Số lượng</i>
                                    <br><small>x{{this.amount}}</small>
                                </div>
                                <div class="col-2 mt-3">
                                    <i>Giá tiền:</i>
                                    <br><small>{{this.price}}.000 VND</small>
                                </div>
                            </div>
                            {{/each}}
                            <div class="row">
                                <div class="col-10 mt-3">
                                    <p class="text-secondary">Tổng tiền hàng</p>
                                    <p class="text-secondary">Phí vận chuyển</p>
                                    <h6>Thành tiền</h6>
                                </div>
                                <div class="col-2 mt-3">
                                    <p class="text-secondary">{{order.itemsPrice}}.000 VND</p>
                                    <p class="text-secondary">{{order.shippingPrice}}.000 VND</p>
                                    <h6>{{order.totalPrice}}.000 VND</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-2">
                <div class="card-body">
                    <h5 class="card-title">Phương thức thanh toán</h5>
                    <p class="card-text">{{order.paymentMethod}}</p>
                </div>
            </div>
            <div class="card mt-2">
                <a href="/shoes/my-order" class="btn btn-success">Quay lại</a>
            </div>

        </div>
    </div>
</div>