<div class="container">
    <div class="mt-top">
        <h1>{{category}}</h1>
        {{#if blog}}
        {{#each blog}}

        <div class="card mb-3 blog-size">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <a href="/blogs/{{this.slugCategory}}/{{this.slug}}">
                        <img src="/uploads/blogs/{{this.avatar}}" alt="...">
                    </a>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <a href="/blogs/{{this.slugCategory}}/{{this.slug}}" style="color: #000;">
                            <h5 class="card-title">{{this.title}}</h5>
                        </a>
                        <p class="card-text">{{this.description}}</p>
                        <p class="card-text"><small class="text-muted">Bởi: Hữu Thắng</small> . <small
                                class="text-muted">{{formatDate this.createdAt "Asia/Ho_Chi_Minh" "DD-MM-YYYY"}}</small></p>
                    </div>
                </div>
            </div>
        </div>

        {{/each}}

        {{/if}}



    </div>
</div>