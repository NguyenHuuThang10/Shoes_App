<div class="content-wrapper" style="min-height: 650px; margin-bottom: 20px">
    <div class="container-fluid">
        <div class="content-header">
            <h1>Thêm trang:</h1>
            {{#if err}}
                <div class="alert alert-danger" role="alert">
                    {{err}}
                </div>
            {{/if}}
            {{#if success}}
                <div class="alert alert-success" role="alert">
                    {{success}}
                </div>
            {{/if}}
        </div>
        <form action="" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col mx-sm-3">
                    <div class="form-group">
                        <label for="title">Tiêu đề</label>
                        <input type="text" class="form-control" id="title" name="title"  placeholder="Nhập tiêu đề trang" value="{{old.name}}">
                    </div>

                    <div class="form-group">
                        <label for="avatar">Ảnh đại diện</label>
                        <input type="file" class="form-control-file" id="avatar" name="avatar" placeholder="Chọn hình ảnh">
                    </div>

                    <div class="form-group">
                        <label for="category">Chuyên mục</label>
                        <select class="form-control" id="category" name="category">
                            <option value="" selected>-- Chuyện mục --</option>
                            <option value="Về chúng tôi" {{#ifEquals old.category "Về chúng tôi" }}selected{{/ifEquals}}>Về chúng tôi</option>
                            <option value="Chính sách bảo mật" {{#ifEquals old.category "Chính sách bảo mật" }}selected{{/ifEquals}}>Chính sách bảo mật</option>
                            <option value="Chính sách đổi trả bảo hành" {{#ifEquals old.category "Chính sách đổi trả bảo hành" }}selected{{/ifEquals}}>Chính sách đổi trả bảo hành</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="content">Nội dung</label>
                        <textarea class="form-control" name="content" id="content"></textarea>
                    </div>

                    
                </div>

            </div>
            <button type="submit" class="btn btn-primary mx-sm-3">Thêm trang</button>
        </form>
    </div>
</div>



