<div class="content-wrapper" style="min-height: 650px; margin-bottom: 20px">
    <div class="container-fluid">
        <div class="content-header">
            <h1>Cập nhật bài viết:</h1>
            {{#if err}}
                <div class="alert alert-danger" role="alert">
                    {{err}}
                </div>
            {{/if}}
            {{#if success}}
                <div class="alert alert-success" role="alert">
                    {{success}}
                </div>
            {{/if}}
        </div>
        <form action="?_method=PUT" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col mx-sm-3">
                    <div class="form-group">
                        <label for="title">Tiêu đề</label>
                        <input type="text" class="form-control" id="title" name="title"  placeholder="Nhập tiêu đề bài viết" value="{{#if blog }} {{blog.title}} {{else}} {{old.title}} {{/if}}">
                    </div>
                    <div class="form-group">
                        <label for="description">Mô tả</label>
                        <input type="text" class="form-control" id="description" name="description"  placeholder="Nhập mô tả bài viết" value="{{#if blog }} {{blog.description}} {{else}} {{old.description}} {{/if}}">
                    </div>

                    <div class="form-group">
                        <label for="avatar">Ảnh đại diện</label>
                        <input type="file" class="form-control-file" id="avatar" name="avatar" placeholder="Chọn hình ảnh">
                    </div>

                    <div class="form-group">
                        <label for="category">Chuyên mục</label>
                        <select class="form-control" id="category" name="category">
                            <option value="" selected>-- Chuyện mục --</option>
                            <option value="Tư vấn chọn size" {{#ifEquals blog.category "Tư vấn chọn size" }}selected{{/ifEquals}}>Tư vấn chọn size</option>
                            <option value="Xu hướng thời trang" {{#ifEquals blog.category "Xu hướng thời trang" }}selected{{/ifEquals}}>Xu hướng thời trang</option>
                            <option value="Kinh nghiệm hay" {{#ifEquals blog.category "Kinh nghiệm hay" }}selected{{/ifEquals}}>Kinh nghiệm hay</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="content">Nội dung</label>
                        <textarea class="form-control content" name="content" id="content">{{#if blog.content}} {{blog.content}} {{/if}}</textarea>
                    </div>

                    
                </div>

            </div>
            <button type="submit" class="btn btn-primary mx-sm-3">Cập nhật</button>
            <a href="/me/stored/blogs" class="btn btn-success mx-sm-3">Quay lại</a>
        </form>
    </div>
</div>



