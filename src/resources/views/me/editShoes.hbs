<div class="content-wrapper" style="min-height: 650px;">
    <div class="container-fluid">
        <div class="content-header">
            <h1>Sửa sản phẩm:</h1>
        </div>
        {{#if err}}
        <div class="alert alert-danger" role="alert">
            {{err}}
        </div>
        {{/if}}
        <form action="/me/{{shoe._id}}/update/shoes?_method=PUT" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col mx-sm-3">
                    <div class="form-group">
                        <label for="name">Tên sản phẩm</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Nhập tên sản phẩm"
                            value="{{shoe.name}}">
                    </div>
                    <div class="form-group">
                        <label for="type">Kiểu giày</label>
                        <select class="form-control" id="type" name="type">
                            <option value="" selected>-- Chọn kiểu giày --</option>
                            <option value="Giày nam" {{#ifEquals shoe.type "Giày nam" }}selected{{/ifEquals}}>Giày nam
                            </option>
                            <option value="Giày nữ" {{#ifEquals shoe.type "Giày nữ" }}selected{{/ifEquals}}>Giày nữ
                            </option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="typeDetail">Kiểu dáng</label>
                        <input type="text" class="form-control" id="typeDetail" name="typeDetail"
                            placeholder="Nhập kiểu dáng" value="{{shoe.typeDetail}}">
                    </div>
                    <div class="form-group">
                        <label for="description">Mô tả</label>
                        <textarea class="form-control content" id="description" name="description"
                            placeholder="Nhập mô tả">{{shoe.description}}</textarea>
                    </div>
                </div>

                <div class="col mx-sm-3">
                    <div class="form-group">
                        <label for="quantity">Số lượng hàng trong kho</label>
                        <input type="text" class="form-control" id="quantity" name="quantity"
                            placeholder="Nhập số lượng hàng trong kho" value="{{shoe.quantity}}">
                    </div>

                    <div class="form-group">
                        <label for="status">Tình trạng hàng</label>
                        <select class="form-control" id="status" name="status">
                            <option value="" selected>-- Tình trạng hàng --</option>
                            <option value="1" {{#ifEquals shoe.status "1" }}selected{{/ifEquals}}>Còn hàng</option>
                            <option value="0" {{#ifEquals shoe.status "0" }}selected{{/ifEquals}}>Đã hết hàng</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="price">Giá gốc</label>
                        <input type="text" class="form-control" id="price" name="price" placeholder="Nhập giá gốc"
                            value="{{shoe.price}}">
                    </div>

                    <div class="form-group">
                        <label for="priceDiscount">Giá giảm</label>
                        <input type="text" class="form-control" id="priceDiscount" name="priceDiscount"
                            placeholder="Nhập giá giảm" value="{{shoe.priceDiscount}}">
                    </div>

                    <div class="form-group">
                        <label for="image">Hình ảnh</label>
                        <input type="file" class="form-control-file" id="image" name="image"
                            placeholder="Nhập hình ảnh">
                    </div>

                </div>
            </div>
            <button type="submit" class="btn btn-primary mx-sm-3">Cập nhật sản phẩm</button>
            <a href="/me/stored/shoes" class="btn btn-success mx-sm-3">Quay lại</a>
        </form>
    </div>
</div>