<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Hiển thị toàn bộ các câu hỏi khi trang vừa được tải
        document.querySelectorAll('.faq-content').forEach(content => {
            content.classList.add('active');
        });
    });

    document.querySelectorAll('.category-link').forEach(link => {
        link.addEventListener('click', function (e) {
            e.preventDefault();

            // Lấy danh mục được chọn
            const category = this.getAttribute('data-category');

            // Ẩn tất cả các mục câu hỏi
            document.querySelectorAll('.faq-content').forEach(content => {
                content.classList.remove('active');
            });

            // Hiển thị các câu hỏi theo danh mục
            if (category === 'all') {
                // Hiển thị tất cả câu hỏi nếu chọn "Tất cả"
                document.querySelectorAll('.faq-content').forEach(content => {
                    content.classList.add('active');
                });
            } else {
                // Hiển thị câu hỏi theo danh mục cụ thể
                document.querySelector(`.faq-content[data-category="${category}"]`).classList.add('active');
            }
        });
    });
</script>